<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Affirm\Block\Promotion\Banners" name="affirm_banner_center_top" as="bml.main.top" template="Affirm::promotion/bml.phtml" before="-">
                <arguments>
                    <argument name="section" xsi:type="string">homepage</argument>
                    <argument name="position" xsi:type="number">0</argument>
                </arguments>
            </block>
            <block class="Affirm\Block\Promotion\Banners" name="affirm_banner_center_bottom" as="bml.main.bottom" template="Affirm::promotion/bml.phtml" after="-">
                <arguments>
                    <argument name="section" xsi:type="string">homepage</argument>
                    <argument name="position" xsi:type="number">1</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="sidebar.additional">
            <block class="Affirm\Block\Promotion\Banners" name="affirm_banner_sidebar_top" as="bml.sidebar.top" template="Affirm::promotion/bml.phtml" before="-">
                <arguments>
                    <argument name="section" xsi:type="string">homepage</argument>
                    <argument name="position" xsi:type="number">2</argument>
                </arguments>
            </block>
            <block class="Affirm\Block\Promotion\Banners" name="affirm_banner_bottom" as="bml.sidebar.bottom" template="Affirm::promotion/bml.phtml" after="-">
                <arguments>
                    <argument name="section" xsi:type="string">homepage</argument>
                    <argument name="position" xsi:type="number">3</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
