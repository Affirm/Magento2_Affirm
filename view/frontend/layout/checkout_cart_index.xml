<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.methods">
            <block class="Affirm\Block\Onepage\AffirmButton" name="affirm.cart.shortcut.buttons" before="checkout.cart.methods.multishipping" />
            <block class="Affirm\Block\Promotion\CartPage\Aslowas" name="aslowas.checkout.cart.widget" template="Affirm::promotion/aslowasCart.phtml" after="product.info.price">
                <arguments>
                    <argument name="position" xsi:type="string">cc</argument>
                </arguments>
            </block>
            <block class="Affirm\Block\Promotion\Banners" name="affirm_banner_methods_top" as="bml.cart.methods.top" template="Affirm::promotion/bml.phtml" before="-">
                <arguments>
                    <argument name="section" xsi:type="string">checkout_cart</argument>
                    <argument name="position" xsi:type="number">2</argument>
                </arguments>
            </block>
            <block class="Affirm\Block\Promotion\Banners" name="affirm_banner_methods_bottom" as="bml.cart.methods.bottom" template="Affirm::promotion/bml.phtml" after="-">
                <arguments>
                    <argument name="section" xsi:type="string">checkout_cart</argument>
                    <argument name="position" xsi:type="number">3</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Affirm\Block\Promotion\Banners" name="affirm_banner_center_top" as="bml.main.top" template="Affirm::promotion/bml.phtml" before="-">
                <arguments>
                    <argument name="section" xsi:type="string">checkout_cart</argument>
                    <argument name="position" xsi:type="number">0</argument>
                </arguments>
            </block>
            <block class="Affirm\Block\Promotion\Banners" name="affirm_banner_center_bottom" as="bml.main.bottom" template="Affirm::promotion/bml.phtml" after="-">
                <arguments>
                    <argument name="section" xsi:type="string">checkout_cart</argument>
                    <argument name="position" xsi:type="number">1</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
