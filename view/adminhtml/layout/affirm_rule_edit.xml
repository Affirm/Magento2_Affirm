<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Affirm/style.css" />
    </head>
    <body>
        <referenceContainer name="left">
            <block class="Affirm\Block\Adminhtml\Rule\Edit\Tabs" name="Affirm_rule_edit_tabs" >
                <arguments>
                    <argument name="id" xsi:type="string">Affirm_rule_edit_tabs</argument>
                    <argument name="dest_element_id" xsi:type="string">edit_form</argument>
                    <argument name="title" xsi:type="string" translate="true">Payment Restrictions Options</argument>
                </arguments>
                <block class="Affirm\Block\Adminhtml\Rule\Edit\Tab\General" name="Affirm_rule_edit_tab_general"/>
                <block class="Affirm\Block\Adminhtml\Rule\Edit\Tab\Conditions" name="Affirm_rule_edit_tab_conditions"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general</argument>
                    <argument name="block" xsi:type="string">Affirm_rule_edit_tab_general</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">conditions</argument>
                    <argument name="block" xsi:type="string">Affirm_rule_edit_tab_conditions</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Affirm\Block\Adminhtml\Rule\Edit" name="Affirm_rule_edit"/>
        </referenceContainer>
    </body>
</page>