input PaymentMethodInput {
    affirm: AffirmInput
}

input AffirmInput {
    checkout_token: String! @doc(description:"The one-time checkout token generated by Affirm. Required field to make sale transaction.")
}

type StoreConfig {
    affirm_gateway_mode: String @doc(description: "Affirm mode (sandbox or production).")
    affirm_gateway_locale: String
        @doc(description: "Affirm locale.")
        @resolver(class: "Astound\\Affirm\\Model\\Resolver\\StoreConfig\\Locale")
    affirm_gateway_country_code: String
        @doc(description: "Affirm country code.")
        @resolver(class: "Astound\\Affirm\\Model\\Resolver\\StoreConfig\\CountryCode")
    affirm_gateway_public_api_key: String
        @doc(description: "Affirm public API key.")
        @resolver(class: "Astound\\Affirm\\Model\\Resolver\\StoreConfig\\ApiKey")
}