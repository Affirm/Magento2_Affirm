<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="affirm_script" type="host">*.affirm.com</value>
                <value id="affirm_script_ca" type="host">*.affirm.ca</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="affirm_frame" type="host">*.affirm.com</value>
                <value id="affirm_frame_ca" type="host">*.affirm.ca</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="affirm_connect" type="host">*.affirm.com</value>
                <value id="affirm_connect_ca" type="host">*.affirm.ca</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="affirm_assets" type="host">*.affirm.com</value>
                <value id="affirm_assets_ca" type="host">*.affirm.ca</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
