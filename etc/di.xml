<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Affirm\Api\AffirmCheckoutManagerInterface" type="Affirm\Model\AffirmCheckoutManager" />
    <preference for="Affirm\Api\CheckoutPaymentManagerInterface" type="Affirm\Model\CheckoutPaymentManager" />
    <preference for="Affirm\Api\GiftWrapManagerInterface" type="Affirm\Model\GiftWrapManager" />
    <preference for="Affirm\Api\InlineCheckoutInterface" type="Affirm\Model\InlineCheckout" />

    <!-- Payment Method Facade configuration -->
    <virtualType name="OnePicaAffirmGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Affirm\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Affirm\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">AffirmOnePicaValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">AffirmOnePicaCommandPool</argument>
            <argument name="validatorPool" xsi:type="object">AffirmValidatorPool</argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="AffirmOnePicaValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">OnePicaAffirmGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="OnePicaAffirmGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Affirm\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <virtualType name="OnePicaAffirmGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="OnePicaAffirmGatewayLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <!-- Validators -->
    <virtualType name="AffirmCountryValidator" type="Magento\Payment\Gateway\Validator\CountryValidator">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="AffirmCurrencyValidator" type="Affirm\Gateway\Validator\CurrencyValidator">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <!-- Validator Pool -->
    <virtualType name="AffirmValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="country" xsi:type="string">AffirmCountryValidator</item>
                <item name="currency" xsi:type="string">AffirmCurrencyValidator</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Command poll contains our commands requests (authorize, capture, void and etc), now temporary is empty -->
    <virtualType name="AffirmOnePicaCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="pre_authorize" xsi:type="string">AffirmGatewayPreAuthorizeCommand</item>
                <item name="authorize" xsi:type="string">Affirm\Gateway\Command\AuthorizeStrategyCommand</item>
                <item name="order_authorize" xsi:type="string">AffirmGatewayAuthorizeCommand</item>
                <item name="capture" xsi:type="string">Affirm\Gateway\Command\CaptureStrategyCommand</item>
                <item name="order_capture" xsi:type="string">AffirmGatewayCaptureCommand</item>
                <item name="refund" xsi:type="string">AffirmGatewayRefundCommand</item>
                <item name="void" xsi:type="string">AffirmGatewayVoidCommand</item>
                <item name="cancel" xsi:type="string">Affirm\Gateway\Command\CancelStrategyCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Strategy commands -->
    <type name="Affirm\Gateway\Command\AuthorizeStrategyCommand">
        <arguments>
            <argument name="commandPool" xsi:type="object">AffirmOnePicaCommandPool</argument>
        </arguments>
    </type>

    <type name="Affirm\Gateway\Command\CaptureStrategyCommand">
        <arguments>
            <argument name="commandPool" xsi:type="object">AffirmOnePicaCommandPool</argument>
        </arguments>
    </type>

    <type name="Affirm\Gateway\Command\CancelStrategyCommand">
        <arguments>
            <argument name="commandPool" xsi:type="object">AffirmOnePicaCommandPool</argument>
        </arguments>
    </type>
    <!-- Strategy commands -->

    <!-- Authorize command -->
    <virtualType name="AffirmGatewayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">AffirmGatewayAuthorizationRequest</argument>
            <argument name="transferFactory" xsi:type="object">AffirmClientGatewayTransferFactory</argument>
            <argument name="client" xsi:type="object">Affirm\Gateway\Http\Client\ClientService</argument>
            <argument name="handler" xsi:type="object">Affirm\Gateway\Response\TransactionAuthorizeHandler</argument>
            <argument name="validator" xsi:type="object">Affirm\Gateway\Validator\Client\PaymentActionsValidator</argument>
        </arguments>
    </virtualType>

    <!-- Pre Authorize command -->
    <virtualType name="AffirmGatewayPreAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">AffirmGatewayPreAuthorizationRequest</argument>
            <argument name="transferFactory" xsi:type="object">AffirmPreAuthorizationGatewayTransferFactory</argument>
            <argument name="client" xsi:type="object">Affirm\Gateway\Http\Client\ClientService</argument>
            <argument name="validator" xsi:type="object">Affirm\Gateway\Validator\Client\PaymentActionsValidatorPreAuthorize</argument>
        </arguments>
    </virtualType>
    <!-- Pre Authorize command -->

    <!-- Capture command -->
    <virtualType name="AffirmGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">AffirmGatewayCaptureRequest</argument>
            <argument name="transferFactory" xsi:type="object">AffirmClientGatewayTransferFactory</argument>
            <argument name="client" xsi:type="object">Affirm\Gateway\Http\Client\ClientService</argument>
            <argument name="validator" xsi:type="object">Affirm\Gateway\Validator\Client\PaymentActionsValidator</argument>
            <argument name="handler" xsi:type="object">Affirm\Gateway\Response\TransactionCaptureHandler</argument>
        </arguments>
    </virtualType>
    <!-- Capture command -->

    <!-- Refund command -->
    <virtualType name="AffirmGatewayRefundCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">AffirmGatewayRefundRequest</argument>
            <argument name="transferFactory" xsi:type="object">AffirmClientGatewayTransferFactory</argument>
            <argument name="client" xsi:type="object">Affirm\Gateway\Http\Client\ClientService</argument>
            <argument name="validator" xsi:type="object">Affirm\Gateway\Validator\Client\PaymentActionsValidator</argument>
            <argument name="handler" xsi:type="object">Affirm\Gateway\Response\TransactionRefundHandler</argument>
        </arguments>
    </virtualType>
    <!-- Refund command -->

    <!-- Void command -->
    <virtualType name="AffirmGatewayVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">AffirmGatewayVoidRequest</argument>
            <argument name="transferFactory" xsi:type="object">AffirmClientGatewayTransferFactory</argument>
            <argument name="client" xsi:type="object">Affirm\Gateway\Http\Client\ClientService</argument>
            <argument name="validator" xsi:type="object">Affirm\Gateway\Validator\Client\PaymentActionsValidatorVoid</argument>
            <!--<argument name="handler" xsi:type="object">Affirm\Gateway\Response\TransactionRefundHandler</argument>-->
        </arguments>
    </virtualType>
    <!-- Void command -->

    <type name="Affirm\Gateway\Http\Client\ClientService">
        <arguments>
            <argument name="logger" xsi:type="object">AffirmLogger</argument>
            <argument name="converter" xsi:type="object">Affirm\Gateway\Http\Converter\JsonToArray</argument>
        </arguments>
    </type>

    <virtualType name="AffirmLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request Builder-->
    <virtualType name="AffirmGatewayAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Affirm\Gateway\Request\AuthorizationRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Authorization Request Builder-->

    <type name="Affirm\Gateway\Request\AbstractDataBuilder">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Pre Authorization Request Builder-->
    <virtualType name="AffirmGatewayPreAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Affirm\Gateway\Request\PreAuthorizationRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- Pre Authorization Request Builder-->

    <virtualType name="AffirmGatewayCaptureRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Affirm\Gateway\Request\CaptureRequest</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="AffirmGatewayRefundRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Affirm\Gateway\Request\RefundRequest</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="AffirmGatewayVoidRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Affirm\Gateway\Request\VoidRequest</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorization Transfer Factory -->
    <virtualType name="AffirmClientGatewayTransferFactory" type="Affirm\Gateway\Http\TransferFactory">
        <arguments>
            <argument name="action" xsi:type="object">AffirmClientTransactionAction</argument>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="AffirmClientTransactionAction" type="Affirm\Gateway\Helper\Request\Action">
        <arguments>
            <argument name="action" xsi:type="const">Affirm\Gateway\Helper\Request\Action::API_TRANSACTIONS_PATH</argument>
        </arguments>
    </virtualType>
    <!-- Authorization Transfer Factory -->

    <type name="Affirm\Gateway\Helper\Request\Action">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Pre Authorization Transfer Factory -->
    <virtualType name="AffirmPreAuthorizationGatewayTransferFactory" type="Affirm\Gateway\Http\TransferFactory">
        <arguments>
            <argument name="action" xsi:type="object">AffirmPreAuthorizationTransactionAction</argument>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="AffirmPreAuthorizationTransactionAction" type="Affirm\Gateway\Helper\Request\Action">
        <arguments>
            <argument name="action" xsi:type="const">Affirm\Gateway\Helper\Request\Action::API_CHECKOUT_PATH</argument>
        </arguments>
    </virtualType>
    <!-- Pre Authorization Transfer Factory -->

    <!-- Added plugin to the edit and save new order controller in admin  -->
    <type name="Magento\Sales\Controller\Adminhtml\Order\Edit\Save">
        <plugin name="before-edit-admin" type="Affirm\Model\Plugin\Order\EditOrder" sortOrder="1"/>
    </type>
    <type name="Magento\Sales\Controller\Adminhtml\Order\Create\Save">
        <plugin name="before-create-admin" type="Affirm\Model\Plugin\Order\Create" sortOrder="1"/>
    </type>
    <type name="Magento\Sales\Controller\Adminhtml\Order\AddressSave">
        <plugin name="after-edit-address-save" type="Affirm\Model\Plugin\Order\AddressSave\Edit" sortOrder="1"/>
    </type>
    <type name="Magento\Checkout\CustomerData\Cart">
        <plugin name="checkout-aslowas-minicart" type="Affirm\Model\Plugin\Checkout\CustomerData\Cart"/>
    </type>
    <type name="Magento\Sales\Model\Order\Payment">
        <plugin name="after-can-capture-partial" type="Affirm\Model\Plugin\Payment\CanCapturePartial" sortOrder="1"/>
    </type>

    <!-- Init payment helper -->
    <type name="Affirm\Helper\Payment">
        <arguments>
            <argument name="payment" xsi:type="object">OnePicaAffirmGatewayFacade</argument>
        </arguments>
    </type>

    <type name="Magento\Quote\Model\Quote\Config">
        <plugin name="ProductAttributes" type="Affirm\Plugin\ProductAttributes" />
    </type>

    <type name="Magento\Payment\Model\PaymentMethodList">
        <plugin name="Affirm::restrictPaymentMethods" type="\Affirm\Plugin\RestrictPaymentMethods" sortOrder="1" />
    </type>

    <!-- Logger -->
    <type name="Affirm\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Affirm\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">AffirmDebugLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Affirm\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
