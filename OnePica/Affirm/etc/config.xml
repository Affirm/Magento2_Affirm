<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <affirm_gateway>
                <active>0</active>
                <debug>1</debug>
                <model>OnePicaAffirmGatewayFacade</model>
                <mode>sandbox</mode>
                <api_url_sandbox>https://sandbox.affirm.com</api_url_sandbox>
                <api_url_production>https://api.affirm.com</api_url_production>
                <min_order_total>0.01</min_order_total>
                <max_order_total>1000</max_order_total>
                <payment_action>authorize</payment_action>
                <currency>USD</currency>
                <allow_specific>1</allow_specific>
                <specific_country>US</specific_country>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <sort_order>0</sort_order>
                <title><![CDATA[<img src="https://cdn1.affirm.com/images/badges/affirm-logo_78x54.png" width="39" height="27" class="v-middle"/>&nbsp;Buy with Monthly Payments]]></title>
             </affirm_gateway>
        </payment>
    </default>
</config>
