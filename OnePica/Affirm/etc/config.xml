<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <affirm_gateway>
                <active>1</active>
                <debug>1</debug>
                <model>OnePicaAffirmGatewayFacade</model>
                <mode>sandbox</mode>
                <api_url_sandbox>https://sandbox.affirm.com</api_url_sandbox>
                <api_url_production>https://api.affirm.com</api_url_production>
                <min_order_total>0.01</min_order_total>
                <max_order_total>1000</max_order_total>
                <payment_action>authorize</payment_action>
                <allowspecific>1</allowspecific>
                <specificcountry>US</specificcountry>
                <allowspecificcurrency>1</allowspecificcurrency>
                <currency>USD</currency>
                <can_authorize>0</can_authorize>
                <can_capture_partial>0</can_capture_partial>
                <can_void>1</can_void>
                <can_use_checkout>1</can_use_checkout>
                <can_capture>0</can_capture>
                <can_refund>1</can_refund>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <can_use_internal>1</can_use_internal>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <sort_order>0</sort_order>
                <title>Affirm</title>
                <icon>https://cdn1.affirm.com/images/badges/affirm-logo_78x54.png</icon>
                <info>Buy with Monthly Payments</info>
                <virtual_terminal_url>http://help.merchants.affirm.com/article/67-virtual-terminal-overview</virtual_terminal_url>
            </affirm_gateway>
        </payment>
    </default>
</config>
