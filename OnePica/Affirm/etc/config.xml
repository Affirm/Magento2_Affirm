<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <affirm_gateway>
                <active>0</active>
                <debug>1</debug>
                <model>OnePicaAffirmGatewayFacade</model>
                <mode>sandbox</mode>
                <api_url_sandbox>https://sandbox.affirm.com</api_url_sandbox>
                <api_url_production>https://api.affirm.com</api_url_production>
                <minimum_order_total>0.01</minimum_order_total>
                <maximum_order_total>1000</maximum_order_total>
                <payment_action>authorize</payment_action>
                <title>Payment method (Affirm)</title>
                <currency>USD</currency>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <sort_order>0</sort_order>
             </affirm_gateway>
        </payment>
    </default>
</config>
