<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/affirm/order/load/:quoteId" method="POST">
        <service class="OnePica\Affirm\Api\OrderServiceManagerInterface" method="getIncrementId"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/affirm/order/guest/load/:quoteId" method="POST">
        <service class="OnePica\Affirm\Api\GuestOrderServiceManagerInterface" method="getIncrementId"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/affirm/order/init" method="POST">
        <service class="OnePica\Affirm\Api\AffirmCheckoutManagerInterface" method="initCheckout"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
