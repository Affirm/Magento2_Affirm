<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="OnePica\Affirm\Api\OrderServiceManagerInterface" type="OnePica\Affirm\Model\OrderServiceManager" />
    <preference for="OnePica\Affirm\Api\GuestOrderServiceManagerInterface" type="OnePica\Affirm\Model\GuestOrderServiceManager" />
    <!-- Payment Method Facade configuration -->
    <virtualType name="OnePicaAffirmGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\OnePica\Affirm\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">OnePica\Affirm\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">OnePicaValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">OnePicaCommandPool</argument>
            <argument name="validatorPool" xsi:type="object">AffirmValidatorPool</argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="OnePicaValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">OnePicaAffirmGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="OnePicaAffirmGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\OnePica\Affirm\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <virtualType name="OnePicaAffirmGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="OnePicaAffirmGatewayLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <!-- Validators -->
    <virtualType name="AffirmCountryValidator" type="Magento\Payment\Gateway\Validator\CountryValidator">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="AffirmCurrencyValidator" type="OnePica\Affirm\Gateway\Validator\CurrencyValidator">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <!-- Validator Pool -->
    <virtualType name="AffirmValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="country" xsi:type="string">AffirmCountryValidator</item>
                <item name="currency" xsi:type="string">AffirmCurrencyValidator</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Command poll contains our commands requests (authorize, capture, void and etc), now temporary is empty -->
    <virtualType name="OnePicaCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">AffirmGatewayAuthorizeCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="AffirmGatewayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">AffirmGatewayAuthorizationRequest</argument>
            <argument name="transferFactory" xsi:type="object">AffirmAuthorizationGatewayTransferFactory</argument>
            <argument name="client" xsi:type="object">OnePica\Affirm\Gateway\Http\Client\ClientService</argument>
            <argument name="handler" xsi:type="object">OnePica\Affirm\Gateway\Response\TransactionAuthorizeHandler</argument>
            <argument name="validator" xsi:type="object">OnePica\Affirm\Gateway\Validator\PaymentActionsValidator</argument>
            <!--<argument name="client" xsi:type="object">OnePica\Affirm\Gateway\Http\Client\AuthorizationClientService</argument>-->
        </arguments>
    </virtualType>

    <!--<type name="OnePica\Affirm\Gateway\Http\Client\AuthorizationClientService">-->
        <!--<arguments>-->
            <!--<argument name="formatHelper" xsi:type="object">OnePica\Affirm\Gateway\Helper\Util</argument>-->
            <!--<argument name="logger" xsi:type="object">AffirmLogger</argument>-->
            <!--<argument name="converter" xsi:type="object">OnePica\Affirm\Gateway\Http\Converter\JsonToArray</argument>-->
        <!--</arguments>-->
    <!--</type>-->

    <type name="OnePica\Affirm\Gateway\Http\Client\ClientService">
        <arguments>
            <argument name="logger" xsi:type="object">AffirmLogger</argument>
            <argument name="converter" xsi:type="object">OnePica\Affirm\Gateway\Http\Converter\JsonToArray</argument>
        </arguments>
    </type>

    <virtualType name="AffirmLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="AffirmGatewayAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">OnePica\Affirm\Gateway\Request\AuthorizationRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="OnePica\Affirm\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Authorization Transfer Factory -->
    <virtualType name="AffirmAuthorizationGatewayTransferFactory" type="OnePica\Affirm\Gateway\Http\TransferFactory">
        <arguments>
            <argument name="action" xsi:type="object">AffirmAuthorizationTransactionAction</argument>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="OnePica\Affirm\Gateway\Helper\Request\Action">
        <arguments>
            <argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>
        </arguments>
    </type>

    <virtualType name="AffirmAuthorizationTransactionAction" type="OnePica\Affirm\Gateway\Helper\Request\Action">
        <arguments>
            <argument name="action" xsi:type="const">OnePica\Affirm\Gateway\Helper\Request\Action::API_CHARGES_PATH</argument>
            <!--<argument name="config" xsi:type="object">OnePicaAffirmGatewayConfig</argument>-->
        </arguments>
    </virtualType>

