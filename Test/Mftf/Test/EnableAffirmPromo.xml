<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="EnableAffirm">
        <annotations>
            <features value="Affirm"/>
            <stories value="Affirm Promo"/>
            <title value="Enable Affirm Promo"/>
            <description value="Enable Affirm Promo on config page"/>
        </annotations>
        <before>
            <createData entity="SimpleSubCategory" stepKey="simpleCategory"/>
            <createData entity="SimpleProduct" stepKey="simpleProduct">
                <requiredEntity createDataKey="simpleCategory"/>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <actionGroup ref="AdminAffirmEnableActionGroup" stepKey="EnableAffirmAction"/>
        <actionGroup ref="AdminAffirmPromoEnableActionGroup" stepKey="EnableAffirmPromoAction"/>
    </test>
</tests>
